<%= render 'devise/shared/header', action: 'Esqueceu sua senha?' %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'ui large form' }) do |f| %>
  <div class="ui stacked segment">
    <div class="field">
      <div class="ui left icon input">
        <i class="user icon"></i>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email' %>
      </div>
    </div>

    <%= f.submit "Enviar link de recuperação de senha", class: 'ui fluid large teal submit button' %>
  </div>
<% end %>

<div class="ui stacked segment" style="padding-bottom: 14px;">
  <%= render "devise/shared/links" %>
</div>
