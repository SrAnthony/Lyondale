<div class="ld-flex">
  <div class="ld-block">
    <h3 class="ld-block-title">
      <i class="lnr lnr-home"></i> Lista de casas
      <div class="right floated">
        <div class="ui icon transparent small input">
          <i class="lnr lnr-magnifier blue-link link"></i>
          <input type="text" placeholder="Procurar" class="text-light datatable-search" data-table="houses">
        </div>
        <%= link_to new_property_path(category: :casa), title: 'Cadastrar casa' do %>
          <i class="lnr lnr-plus-circle"></i>
        <% end %>
      </div>
    </h3>
    <div class="ld-block-content">

      <% if @houses.any? %>
        <%= render 'properties_list', properties: @houses, datatable: 'houses' %>
      <% else %>
        <div class="text-center text-light">
          Não há casas cadastradas<br>
          <%= link_to new_property_path(category: :casa), class: 'register-button' do %>
            <i class="lnr lnr-plus-circle"></i> Cadastrar agora
          <% end %>
        </div>
      <% end %>

    </div>
  </div>
</div>

