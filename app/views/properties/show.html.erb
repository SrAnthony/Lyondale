<div class="ld-flex">
  <div class="ld-block">
    <div class="ld-flex">
      <div class="property-images-grid">
        <% @property.images.each do |image| %>
        <%= image_tag image, class: 'ui medium rounded image' %>
        <% end %>
      </div>

      <h2 class="ui header text-light">
        <i class="lnr lnr-apartment"></i> <%= @property.description %>
        <div class="sub header">
          <%= @property.address %>
        </div>
      </h2>
    </div>
  </div>
</div>
